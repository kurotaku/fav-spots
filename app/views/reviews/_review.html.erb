<li class="card flex-row mb-4 shadow-sm h-md-250">
  <%= review_thumb300(review, 'card-img-left flex-auto') %>
  <div class="card-body d-flex flex-column align-items-start">
    <a class="user-link" href="<%= user_path(review.user) %>"><%= user_icon_thumb60(review.user) %><span><%= review.user.name %></span><span class="time text-muted"> | <%= time_ago_in_words(review.created_at) %> ago.</span></a>
    <% unless current_page?(:controller => 'spots', :action => 'show') %>
      <h3><%= review.spot.name %></h3>
    <% end %>
    <p class="card-text"><%= review.comment %></p>
    <% if current_user == review.user %>
      <%= link_to '削除', review, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-lg btn-danger' %>
    <% end %>
  </div>
</li>