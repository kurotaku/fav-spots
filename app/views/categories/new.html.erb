<section>
  <h1>カテゴリー登録</h1>
  <%= form_for(@category) do |f| %>
  
    <div class="form-group">
      <%= f.label :name, 'カテゴリー名' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :slug, 'カテゴリースラッグ' %>
      <%= f.text_field :slug, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :category_type, 'カテゴリータイプ' %>
     <%= f.select :category_type, [["特徴", 'feature'], ["ご利益", 'luck']], {}, {class: "form-control"} %>
    </div>
    
    <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
  
  <% end %>
</section>

